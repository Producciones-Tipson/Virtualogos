                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="English A"
                    android:id="@+id/button2"
                    android:onClick="to_tercero_english_a" />

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="English B"
                    android:id="@+id/button3"
                    android:onClick="to_tercero_english_b" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="English C-D"
                    android:id="@+id/button4"
                    android:onClick="to_tercero_english_cd" />

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="Environment"
                    android:id="@+id/button5"
                    android:onClick="to_tercero_environment" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="Lenguaje A-B"
                    android:id="@+id/button6"
                    android:onClick="to_tercero_lenguaje_ab" />

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="Lenguaje C-D"
                    android:id="@+id/button7"
                    android:onClick="to_tercero_lenguaje_cd" />
            </LinearLayout>

            <Button
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="MatemÃ¡ticas"

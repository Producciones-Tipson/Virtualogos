<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/imagen"
                android:layout_height="@dimen/imagen"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logos_academy" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="English A-B"
                    android:id="@+id/button"
                    android:onClick="to_segundo_english_ab" />

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="English C-D"
                    android:id="@+id/button2"
                    android:onClick="to_segundo_english_cd" />
            </LinearLayout>

            <Button
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Environment"
                android:id="@+id/button3"
                android:onClick="to_segundo_environment" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="Espa単ol A"
                    android:id="@+id/button4"
                    android:onClick="to_segundo_espanol_a" />

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="Espa単ol B"
                    android:id="@+id/button5"
                    android:onClick="to_segundo_espanol_b" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="Espa単ol C"
                    android:id="@+id/button6"
                    android:onClick="to_segundo_espanol_c" />

                <Button
                    android:layout_width="@dimen/boton"
                    android:layout_height="wrap_content"
                    android:text="Espa単ol D"
                    android:id="@+id/button7"
                    android:onClick="to_segundo_espanol_d" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/tipson"
                android:id="@+id/textView"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>